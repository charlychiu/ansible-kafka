<!-- {{ ansible_managed }} -->

<Configuration>
  <Appenders>
    <!-- Console Appender -->
    <Console name="stdout" target="SYSTEM_OUT">
      <PatternLayout pattern="{{ log4j2_pattern_layout }}"/>
    </Console>

    <!-- Kafka Server Log Appender -->
    <RollingFile name="kafkaAppender" fileName="${sys:kafka.logs.dir}/server.log"
                 filePattern="${sys:kafka.logs.dir}/server.log.%d{{{ log4j2_file_pattern_date }}}">
      <PatternLayout pattern="{{ log4j2_pattern_layout }}"/>
      <Policies>
        <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
      </Policies>
    </RollingFile>

    <!-- State Change Log Appender -->
    <RollingFile name="stateChangeAppender" fileName="${sys:kafka.logs.dir}/state-change.log"
                 filePattern="${sys:kafka.logs.dir}/state-change.log.%d{{{ log4j2_file_pattern_date }}}">
      <PatternLayout pattern="{{ log4j2_pattern_layout }}"/>
      <Policies>
        <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
      </Policies>
    </RollingFile>

    <!-- Request Log Appender -->
    <RollingFile name="requestAppender" fileName="${sys:kafka.logs.dir}/kafka-request.log"
                 filePattern="${sys:kafka.logs.dir}/kafka-request.log.%d{{{ log4j2_file_pattern_date }}}">
      <PatternLayout pattern="{{ log4j2_pattern_layout }}"/>
      <Policies>
        <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
      </Policies>
    </RollingFile>

    <!-- Log Cleaner Appender -->
    <RollingFile name="cleanerAppender" fileName="${sys:kafka.logs.dir}/log-cleaner.log"
                 filePattern="${sys:kafka.logs.dir}/log-cleaner.log.%d{{{ log4j2_file_pattern_date }}}">
      <PatternLayout pattern="{{ log4j2_pattern_layout }}"/>
      <Policies>
        <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
      </Policies>
    </RollingFile>

    <!-- Controller Log Appender -->
    <RollingFile name="controllerAppender" fileName="${sys:kafka.logs.dir}/controller.log"
                 filePattern="${sys:kafka.logs.dir}/controller.log.%d{{{ log4j2_file_pattern_date }}}">
      <PatternLayout pattern="{{ log4j2_pattern_layout }}"/>
      <Policies>
        <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
      </Policies>
    </RollingFile>

    <!-- Authorizer Log Appender -->
    <RollingFile name="authorizerAppender" fileName="${sys:kafka.logs.dir}/kafka-authorizer.log"
                 filePattern="${sys:kafka.logs.dir}/kafka-authorizer.log.%d{{{ log4j2_file_pattern_date }}}">
      <PatternLayout pattern="{{ log4j2_pattern_layout }}"/>
      <Policies>
        <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
      </Policies>
    </RollingFile>
  </Appenders>

  <Loggers>
    <!-- Root logger - all unspecified loggers will inherit this configuration -->
    <Root level="{{ log4j2_root_logger_level }}">
      <AppenderRef ref="stdout"/>
      <AppenderRef ref="kafkaAppender"/>
    </Root>

    <!-- ZooKeeper client logging -->
    <Logger name="org.apache.zookeeper" level="{{ log4j2_logger_org_apache_zookeeper }}"/>

    <!-- Kafka broker logging -->
    <Logger name="kafka" level="{{ log4j2_logger_kafka }}"/>
    <Logger name="org.apache.kafka" level="{{ log4j2_logger_org_apache_kafka }}"/>

    <!-- Request logging - change to DEBUG or TRACE to enable -->
    <Logger name="kafka.request.logger" level="{{ log4j2_logger_kafka_request_logger }}" additivity="false">
      <AppenderRef ref="requestAppender"/>
    </Logger>

    <Logger name="kafka.network.RequestChannel$" level="{{ log4j2_logger_kafka_network_requestchannel }}" additivity="false">
      <AppenderRef ref="requestAppender"/>
    </Logger>

    <!-- Controller logging -->
    <Logger name="kafka.controller" level="{{ log4j2_logger_kafka_controller }}" additivity="false">
      <AppenderRef ref="controllerAppender"/>
    </Logger>

    <!-- Log cleaner logging -->
    <Logger name="kafka.log.LogCleaner" level="{{ log4j2_logger_kafka_log_logcleaner }}" additivity="false">
      <AppenderRef ref="cleanerAppender"/>
    </Logger>

    <!-- State change logging -->
    <Logger name="state.change.logger" level="{{ log4j2_logger_state_change_logger }}" additivity="false">
      <AppenderRef ref="stateChangeAppender"/>
    </Logger>

    <!-- Authorizer logging - access denials are logged at INFO level -->
    <Logger name="kafka.authorizer.logger" level="{{ log4j2_logger_kafka_authorizer_logger }}" additivity="false">
      <AppenderRef ref="authorizerAppender"/>
    </Logger>
  </Loggers>
</Configuration>
